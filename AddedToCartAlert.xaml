<?xml version="1.0" encoding="utf-8" ?>
<mopups:PopupPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:mopups="clr-namespace:Mopups.Pages;assembly=Mopups"
             xmlns:mopupsanim="clr-namespace:Mopups.Animations;assembly=Mopups"
             x:Class="winui_cooler.AddedToCartAlert"
             BackgroundColor="#00000040"
             CloseWhenBackgroundIsClicked="False">
             <mopups:PopupPage.Animation>
                <mopupsanim:ScaleAnimation DurationIn="1500" EasingIn="BounceOut" PositionIn="Bottom" PositionOut="Center" ScaleIn="1" ScaleOut="0.7"/>
             </mopups:PopupPage.Animation>
    <Border Margin="0,0,0,20" Stroke="DarkBlue" HeightRequest="500"  WidthRequest="500" Background="White" HorizontalOptions="Center" >
        <Border.StrokeShape>
            <RoundRectangle Stroke="#917c00" CornerRadius="50"/>
        </Border.StrokeShape>
        <VerticalStackLayout Background="White" WidthRequest="500" HeightRequest="400" VerticalOptions="Center">
            <Grid Margin="0,20" WidthRequest="450">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="150"/>
                    <ColumnDefinition/>
                    <ColumnDefinition Width="75"/>
                </Grid.ColumnDefinitions>
                <Image HeightRequest="150" WidthRequest="150" Grid.Column="0" IsAnimationPlaying="True" Source="cart_anim.gif"></Image>
                <Label Grid.Column="1" VerticalOptions="Center" FontSize="24" x:Name="title" Text="SUCCESS!" FontFamily="Battambang-Regular" FontAttributes="Bold" TextColor="Navy"/>
            </Grid>
            <Label Margin="50,30,50,30" VerticalOptions="Center" HorizontalOptions="Center" FontFamily="Battambang-Regular" TextColor="DeepSkyBlue" FontSize="18" LineBreakMode="WordWrap"  x:Name="alerttext"/>
            <HorizontalStackLayout HorizontalOptions="Center" Margin="0,30">
                <ContentView Padding="10,10,10,10" BackgroundColor="OrangeRed" HeightRequest="75">
                    <HorizontalStackLayout HorizontalOptions="Center">
                        <Label TextColor="White" VerticalOptions="Center" Text="&#xEC40;" FontFamily="Segoe MDL2 Assets" FontSize="24" />
                        <Label Margin="10" VerticalOptions="Center" FontFamily="Battambang-Regular" TextColor="White" Text="Make an Order" FontSize="20"/>
                    </HorizontalStackLayout>
                    <ContentView.GestureRecognizers>
                        <TapGestureRecognizer Tapped="OnMTapped"/>
                    </ContentView.GestureRecognizers>
                </ContentView>
                <ContentView Padding="10,10,10,10" BackgroundColor="DarkCyan" HeightRequest="75">
                    <HorizontalStackLayout HorizontalOptions="Center">
                        <Label TextColor="White" VerticalOptions="Center" Text="&#xE719;" FontFamily="Segoe MDL2 Assets" FontSize="24" />
                        <Label Margin="10" VerticalOptions="Center" FontFamily="Battambang-Regular" TextColor="White" Text="Continue Shopping" FontSize="20"/>
                    </HorizontalStackLayout>
                    <ContentView.GestureRecognizers>
                        <TapGestureRecognizer Tapped="OnCTapped"/>
                    </ContentView.GestureRecognizers>
                </ContentView>
            </HorizontalStackLayout>
        </VerticalStackLayout>
        
    </Border>
</mopups:PopupPage>